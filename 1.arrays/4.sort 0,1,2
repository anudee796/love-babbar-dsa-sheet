        int zc=0;
        int oc=0;
        int tc=0;
        for(int i=0;i<n;i++){
            if(a[i]==0){
                zc++;
            }else{
                if(a[i]==1){
                    oc++;
                }else{
                    tc++;
                }
            }
        }
        int k=0;
        for(int i=0;i<zc;i++){
            a[k]=0;
            k++;
        }
        for(int i=0;i<oc;i++){
            a[k]=1;
            k++;
        }
        for(int i=0;i<tc;i++){
            a[k]=2;
            k++;
        }
        
    }
